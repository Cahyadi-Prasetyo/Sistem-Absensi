version: '3.8'

services:
  # Redis for caching, queue, and pub/sub
  redis:
    image: redis:7-alpine
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    networks:
      - absensi-network

  # MySQL Database
  mysql:
    image: mysql:8.0
    environment:
      MYSQL_DATABASE: ${DB_DATABASE:-absensi}
      MYSQL_USER: ${DB_USERNAME:-absensi}
      MYSQL_PASSWORD: ${DB_PASSWORD}
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD}
    ports:
      - "3306:3306"
    volumes:
      - mysql_data:/var/lib/mysql
    command: --default-authentication-plugin=mysql_native_password
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "-p${MYSQL_ROOT_PASSWORD}"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
    networks:
      - absensi-network

  # Laravel Reverb WebSocket Server
  reverb:
    build:
      context: .
      dockerfile: Dockerfile
    command: php artisan reverb:start --host=0.0.0.0 --port=8080
    env_file:
      - docker/.env.docker
    environment:
      APP_NODE_ID: reverb-server
      APP_NAME: "Absensi Reverb Server"
      REVERB_HOST: 0.0.0.0
    ports:
      - "8080:8080"
    depends_on:
      mysql:
        condition: service_healthy
      redis:
        condition: service_started
    volumes:
      - ./storage/logs:/var/www/html/storage/logs
    restart: unless-stopped
    networks:
      - absensi-network

  # Laravel App Node 1
  app-node-1:
    build:
      context: .
      dockerfile: Dockerfile
    env_file:
      - docker/.env.docker
    environment:
      APP_NODE_ID: app-node-1
      APP_NAME: "Absensi Node 1"
    volumes:
      - ./storage/logs:/var/www/html/storage/logs
      - public_data:/var/www/html/public
    depends_on:
      mysql:
        condition: service_healthy
      redis:
        condition: service_started
      reverb:
        condition: service_started
    healthcheck:
      test: ["CMD", "php", "artisan", "health:check"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 30s
    restart: unless-stopped
    networks:
      - absensi-network

  # Laravel App Node 2
  app-node-2:
    build:
      context: .
      dockerfile: Dockerfile
    env_file:
      - docker/.env.docker
    environment:
      APP_NODE_ID: app-node-2
      APP_NAME: "Absensi Node 2"
    volumes:
      - ./storage/logs:/var/www/html/storage/logs
    depends_on:
      mysql:
        condition: service_healthy
      redis:
        condition: service_started
      reverb:
        condition: service_started
    healthcheck:
      test: ["CMD", "php", "artisan", "health:check"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 30s
    restart: unless-stopped
    networks:
      - absensi-network

  # Laravel App Node 3
  app-node-3:
    build:
      context: .
      dockerfile: Dockerfile
    env_file:
      - docker/.env.docker
    environment:
      APP_NODE_ID: app-node-3
      APP_NAME: "Absensi Node 3"
    volumes:
      - ./storage/logs:/var/www/html/storage/logs
    depends_on:
      mysql:
        condition: service_healthy
      redis:
        condition: service_started
      reverb:
        condition: service_started
    healthcheck:
      test: ["CMD", "php", "artisan", "health:check"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 30s
    restart: unless-stopped
    networks:
      - absensi-network

  # Laravel App Node 4
  app-node-4:
    build:
      context: .
      dockerfile: Dockerfile
    env_file:
      - docker/.env.docker
    environment:
      APP_NODE_ID: app-node-4
      APP_NAME: "Absensi Node 4"
    volumes:
      - ./storage/logs:/var/www/html/storage/logs
    depends_on:
      mysql:
        condition: service_healthy
      redis:
        condition: service_started
      reverb:
        condition: service_started
    healthcheck:
      test: ["CMD", "php", "artisan", "health:check"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 30s
    restart: unless-stopped
    networks:
      - absensi-network

  # Redis Subscriber for Node 1
  subscriber-node-1:
    build:
      context: .
      dockerfile: Dockerfile
    command: php artisan redis:subscribe
    env_file:
      - docker/.env.docker
    environment:
      APP_NODE_ID: subscriber-node-1
      APP_NAME: "Absensi Subscriber Node 1"
    volumes:
      - ./storage/logs:/var/www/html/storage/logs
    depends_on:
      mysql:
        condition: service_healthy
      redis:
        condition: service_started
      reverb:
        condition: service_started
    restart: unless-stopped
    networks:
      - absensi-network

  # Redis Subscriber for Node 2
  subscriber-node-2:
    build:
      context: .
      dockerfile: Dockerfile
    command: php artisan redis:subscribe
    env_file:
      - docker/.env.docker
    environment:
      APP_NODE_ID: subscriber-node-2
      APP_NAME: "Absensi Subscriber Node 2"
    volumes:
      - ./storage/logs:/var/www/html/storage/logs
    depends_on:
      mysql:
        condition: service_healthy
      redis:
        condition: service_started
      reverb:
        condition: service_started
    restart: unless-stopped
    networks:
      - absensi-network

  # Redis Subscriber for Node 3
  subscriber-node-3:
    build:
      context: .
      dockerfile: Dockerfile
    command: php artisan redis:subscribe
    env_file:
      - docker/.env.docker
    environment:
      APP_NODE_ID: subscriber-node-3
      APP_NAME: "Absensi Subscriber Node 3"
    volumes:
      - ./storage/logs:/var/www/html/storage/logs
    depends_on:
      mysql:
        condition: service_healthy
      redis:
        condition: service_started
      reverb:
        condition: service_started
    restart: unless-stopped
    networks:
      - absensi-network

  # Redis Subscriber for Node 4
  subscriber-node-4:
    build:
      context: .
      dockerfile: Dockerfile
    command: php artisan redis:subscribe
    env_file:
      - docker/.env.docker
    environment:
      APP_NODE_ID: subscriber-node-4
      APP_NAME: "Absensi Subscriber Node 4"
    volumes:
      - ./storage/logs:/var/www/html/storage/logs
    depends_on:
      mysql:
        condition: service_healthy
      redis:
        condition: service_started
      reverb:
        condition: service_started
    restart: unless-stopped
    networks:
      - absensi-network

  # Nginx Load Balancer
  nginx:
    image: nginx:alpine
    ports:
      - "80:80"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - public_data:/var/www/html/public:ro
    depends_on:
      - app-node-1
      - app-node-2
      - app-node-3
      - app-node-4
    networks:
      - absensi-network

volumes:
  redis_data:
  mysql_data:
  public_data:

networks:
  absensi-network:
    driver: bridge
